{
  "name": "astrodex",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro"
  },
  "dependencies": {
    "astro": "^5.13.5"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@types/node": "^24.3.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.14.0",
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.astro": [
      "npx astro check",
      "npx prettier --write"
    ],
    "*.{js,ts,mjs}": [
      "npx prettier --write"
    ]
  }
}
